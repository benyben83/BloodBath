<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FirstPage"
    android:background="@drawable/background"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:text="BLOODBATH"
            android:fontFamily="@font/wild"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="#d40505"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">


        <Button
            android:id="@+id/btNewgame"
            android:layout_width="150dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/wild"
            android:text="New Game"
            android:background="@drawable/bt_generic"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:onClick="startNewGame"/>

        <Button
            android:id="@+id/btLoadExistingGame"
            android:layout_width="150dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/wild"
            android:text="Continue"
            android:textColor="#000000"
            android:background="@drawable/bt_generic"
            android:layout_margin="10dp"
            android:onClick="startNewGame"/>
        <Button
            android:id="@+id/btQuit"
            android:layout_width="150dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/wild"
            android:text="Quit"
            android:textColor="#000000"
            android:onClick="leaveApp"
            android:background="@drawable/bt_generic"
            android:layout_margin="10dp"/>


    </LinearLayout>


</LinearLayout>