<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activities.CreationPageOne">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:fontFamily="@font/wild"
            android:layout_height="wrap_content"
            android:text="BLOODBATH"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textColor="#f70505"
            android:textSize="42dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wild"
            android:text="HELP"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:onClick="tutorial"
            android:background="@drawable/bt_generic"
            android:layout_weight="1"/>
    </LinearLayout>
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:fontFamily="@font/wild"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:onClick="clearName"
        android:text="Character Name"
        android:textAlignment="center"
        android:textColor="#f70505"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDexterity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/wild"
                android:text="Adresse"
                android:textAlignment="center"
                android:textColor="#f70505"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvDexterityScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/wild"
                android:textAlignment="center"
                android:textColor="#f70505"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btIncreaseDexterity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/wild"
                android:background="@drawable/bt_stats_modify"
                android:onClick="increaseStat"
                android:text="+" />

            <Button
                android:id="@+id/btDecreaseDexterity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/wild"
                android:background="@drawable/bt_stats_modify"
                android:onClick="decreaseStat"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStamina"
                android:fontFamily="@font/wild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stamina"
                android:textAlignment="center"
                android:textColor="#f70505"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvStaminaScore"
                android:fontFamily="@font/wild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#f70505"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btIncreaseStamina"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:fontFamily="@font/wild"
                android:layout_margin="5dp"
                android:background="@drawable/bt_stats_modify"
                android:onClick="increaseStat"
                android:text="+" />

            <Button
                android:id="@+id/btDecreaseStamina"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:fontFamily="@font/wild"
                android:layout_margin="5dp"
                android:background="@drawable/bt_stats_modify"
                android:onClick="decreaseStat"
                android:text="-" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvIntelligence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intelligence"
                android:fontFamily="@font/wild"
                android:textAlignment="center"
                android:textColor="#f70505"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvIntelligenceScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/wild"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#f70505"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btIncreaseIntelligence"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:fontFamily="@font/wild"
                android:layout_margin="5dp"
                android:background="@drawable/bt_stats_modify"
                android:onClick="increaseStat"
                android:text="+"

                />

            <Button
                android:id="@+id/btDecreaseIntelligence"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:fontFamily="@font/wild"
                android:layout_margin="5dp"
                android:background="@drawable/bt_stats_modify"
                android:onClick="decreaseStat"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/wild"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvKnowledge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Knowledge"
                android:fontFamily="@font/wild"
                android:textAlignment="center"
                android:textColor="#f70505"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tvKnowledgescore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/wild"
                android:textAlignment="center"
                android:textColor="#f70505"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btIncreaseKnowledge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:fontFamily="@font/wild"
                android:layout_margin="5dp"
                android:background="@drawable/bt_stats_modify"
                android:onClick="increaseStat"
                android:text="+" />

            <Button
                android:id="@+id/btDecreaseKnowledge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:fontFamily="@font/wild"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/bt_stats_modify"
                android:onClick="decreaseStat"
                android:text="-" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Points restants"
        android:fontFamily="@font/wild"
        android:textAlignment="center"
        android:textColor="#f70505" />

    <TextView
        android:id="@+id/tvRemainingPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5"
        android:fontFamily="@font/wild"
        android:textAlignment="center"
        android:textColor="#f70505" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:fontFamily="@font/wild"
            android:background="@drawable/bt_generic"
            android:onClick="proceed"
            android:text="Valider" />

        <Button
            android:id="@+id/btReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wild"
            android:textColor="#000000"
            android:layout_weight="1"
            android:background="@drawable/bt_generic"
            android:onClick="goBack"
            android:text="Return" />
    </LinearLayout>
</LinearLayout>