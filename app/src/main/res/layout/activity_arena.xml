<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llArena"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/animated_background"
    android:orientation="vertical"
    tools:context=".activities.Arena">

    <ImageView
        android:id="@+id/ivToonIdle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/player_idle_animation"
        android:orientation="vertical" />

    <Button
        android:id="@+id/btAttack"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/ben_oldschool_menu"
        android:fontFamily="@font/arcade_classic"
        android:text="Attack"
        android:onClick="toonController"
        android:textColor="#dfa00e"
        android:visibility="visible" />

    <Button
        android:id="@+id/btIdle"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:onClick="toonController"
        android:background="@drawable/ben_oldschool_menu"
        android:fontFamily="@font/arcade_classic"
        android:text="Idle"
        android:textColor="#dfa00e"
        android:visibility="visible" />
